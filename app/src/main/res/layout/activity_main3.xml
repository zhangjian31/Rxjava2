<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/item_video_view_tag_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="16dp">


        <ImageView
            android:id="@+id/item_video_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/ic_video_share" />


        <TextView
            android:id="@+id/tv_item_video_prise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_video_share"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:textColor="#9B9B9B"
            android:textSize="12sp"
            android:text="0" />

        <RelativeLayout
            android:id="@+id/layout_item_video_prise"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-15dp"
            android:layout_toLeftOf="@id/tv_item_video_prise"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_item_video_prise"
                android:layout_width="14dp"
                android:layout_height="15.1dp"
                android:background="@drawable/ic_video_unprise" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_video_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/tv_item_video_prise"
            android:drawableLeft="@drawable/ic_video_comment"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="0"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_video_follow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_video_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#4A4A4A"
            android:textSize="13sp"
            tools:text="名字可能在加载..." />
    </RelativeLayout>

</RelativeLayout>
